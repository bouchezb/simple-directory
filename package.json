{
  "name": "simple-directory",
  "version": "0.1.0",
  "description": "Easy users and organizations management for modern Web-oriented architectures.",
  "main": "server/app.js",
  "scripts": {
    "test": "nyc ava --timeout=5000 -v test/*.js",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "report": "nyc report --reporter=html",
    "lint": "eslint --ext js,vue --ignore-path .gitignore .",
    "dev": "ln -sf ${PWD}/doc/pages public/pages/doc && NODE_ENV=development nodemon server",
    "build": "ln -sf ${PWD}/doc/pages public/pages/doc && nuxt build",
    "start": "node server",
    "doc": "nuxt --config-file ${PWD}/doc/nuxt.config.js",
    "build-doc": "nuxt generate --config-file ${PWD}/doc/nuxt.config.js",
    "deploy-doc": "push-dir --dir=doc-dist --branch=gh-pages --cleanup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koumoul-dev/simple-directory.git"
  },
  "author": "",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/koumoul-dev/simple-directory/issues"
  },
  "homepage": "https://github.com/koumoul-dev/simple-directory#readme",
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-eslint": "^7.2.3",
    "coveralls": "^3.0.0",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.3.0",
    "nodemon": "^1.17.3",
    "nyc": "^11.3.0",
    "push-dir": "^0.4.1"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.1.1",
    "axios": "^0.18.0",
    "body-parser": "^1.18.2",
    "config": "^1.28.1",
    "cookie-parser": "^1.4.3",
    "cookieparser": "^0.1.0",
    "cors": "^2.8.4",
    "event-to-promise": "^0.8.0",
    "express": "^4.16.2",
    "express-jwt": "^5.3.0",
    "js-cookie": "^2.2.0",
    "json-web-key": "^0.3.0",
    "jsonwebtoken": "^8.1.0",
    "jwt-decode": "^2.2.0",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "marked": "^0.3.17",
    "nuxt": "^1.4.0",
    "nuxt-i18n": "^2.9.5",
    "vue-moment": "^3.2.0",
    "vuetify": "^1.0.6"
  }
}
